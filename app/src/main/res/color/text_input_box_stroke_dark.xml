<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused color (can be the same primary or a slightly different shade) -->
    <item android:color="?attr/colorPrimary" android:state_focused="true"/>
    <item android:color="@color/grey_600" android:state_hovered="true"/>
    <item android:color="@color/grey_700" android:state_enabled="false"/>
    <!-- Default color (darker grey for dark theme) -->
    <item android:color="@color/grey_700"/>
</selector>