<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical">

    <!-- Rank Number -->
    <TextView
        android:id="@+id/leaderboard_rank_text"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:layout_marginEnd="12dp"
        tools:text="1"/>

    <!-- User Name -->
    <TextView
        android:id="@+id/leaderboard_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:layout_marginEnd="16dp"
        tools:text="Sarah K. (You)"/>

    <!-- Current Streak -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_flame_amber"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/current_streak"
        app:tint="@color/amber_500"/> <!-- Consistent tint -->
    <TextView
        android:id="@+id/leaderboard_streak_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginEnd="16dp"
        tools:text="15"/>

    <!-- Progress Score -->
    <TextView
        android:id="@+id/leaderboard_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="?attr/colorPrimary"
        tools:text="86"/>

</LinearLayout>